<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/linConsumerDetails">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/input_FName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/edt_FName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="F-Name" />
                </com.google.android.material.textfield.TextInputLayout>

               <!-- <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/FName"
                    android:textColor="@color/inputcolor"
                    android:text="F-Name"/>-->


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/input_MName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/edt_MName"
                        android:hint="M-Name"/>
                </com.google.android.material.textfield.TextInputLayout>
               <!-- <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_MName"
                    android:textColor="@color/inputcolor"
                    android:text="MName"/>-->



                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/input_LName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/edt_LName"
                        android:hint="L-Name"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!--<TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_LName"
                    android:textColor="@color/inputcolor"
                    android:text="LName"/>-->

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/input_Contact_No"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:id="@+id/edt_ContactNo"
                        android:hint="Contact No"/>
                </com.google.android.material.textfield.TextInputLayout>
             <!--   <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_ContactNo"
                    android:textColor="@color/inputcolor"
                    android:text="ContactNo"/>-->




                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnSaveCustomer"
                    android:layout_margin="10dp"
                    android:background="@color/Hedar"
                    android:text="save"/>





            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>